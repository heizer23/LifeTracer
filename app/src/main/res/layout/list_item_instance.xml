<!-- list_item_instance.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="instance"
            type="com.example.lifetracer.Instance" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/textViewInstanceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{instance.taskName}"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewInstanceDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{instance.date}"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewInstanceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(instance.status)}"
            android:textSize="16sp" />

    </LinearLayout>
</layout>
