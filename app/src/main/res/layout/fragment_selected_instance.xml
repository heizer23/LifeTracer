<!-- fragment_selected_instance.xml -->

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="instanceWithTask"
            type="com.example.lifetracer.data.InstanceWithTask" />
        <variable
            name="viewModel"
            type="com.example.lifetracer.viewModel.InstancesViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TextViews for instance details -->
            <TextView
                android:id="@+id/textViewInstanceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@{instanceWithTask.task.name}"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewInstanceStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instance StartTime"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textSize="16sp" />

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="16sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Buttons for actions -->
        <Button
            android:id="@+id/buttonStartPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.toggleStartPauseInstance(instanceWithTask)}"
            android:text="@{instanceWithTask.instance.status == 1 ? @string/pause : @string/start}" />

        <Button
            android:id="@+id/buttonFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:onClick="@{() -> viewModel.finishSelectedInstance()}" />
    </LinearLayout>
</LinearLayout>

</layout>