<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTaskQuality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quality: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textTaskDateOfCreation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Creation: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textTaskRegularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regularity: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textTaskFixed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fixed: "
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Add a Button for deleting the task to the right of the text fields -->
    <Button
        android:id="@+id/buttonDeleteTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:background="@android:color/holo_red_light"
        android:textColor="#FFFFFF" />
</LinearLayout>